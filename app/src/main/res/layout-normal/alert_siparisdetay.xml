<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/zemin">

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        android:background="@color/primaryLightColor"
        app:cardElevation="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/siparisdetay_AdiSoyadi"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Adı Soyadı"/>

        <ImageView
            android:id="@+id/siparisdetay_telefon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_call"
            android:textStyle="bold"
            android:text=""/>


        <ListView
            android:id="@+id/listview_siparisDetay"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true"
            android:fastScrollEnabled="true"></ListView>


        <TextView
            android:id="@+id/siparisdetay_Adres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text=""/>

        <TextView
            android:id="@+id/siparisdetay_siparisDurum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="Siparis Durumu"/>


        <Spinner
            android:padding="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/drw_line_cerceve"
            android:id="@+id/spinner_odeme_turu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>


    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_siparisTeslimEdildi"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="@color/secondaryColor"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sipariş Teslim Edildi."/>

        <Button
            android:id="@+id/btn_siparisIptal"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="@color/secondaryColor"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sipariş İptal"/>

    </LinearLayout>
</LinearLayout>