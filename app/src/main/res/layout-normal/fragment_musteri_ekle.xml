<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MusteriEkleFragment">


    <LinearLayout
        android:id="@+id/linearlayout_musteriEkle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardview_musteriEkle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="7dp"
        android:background="@color/primaryLightColor"
        app:cardElevation="7dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_musteriAdi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_musteriAdi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/str_musteriAdi"
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_musteriSoyadi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_musteriSoyadi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/str_musteriSoyadi"
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:weightSum="1">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/til_musteriTel1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <android.support.design.widget.TextInputEditText
                                            android:id="@+id/ed_musteriTel1"
                                            android:hint="@string/str_musteriTel1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="phone"
                                            android:background="@drawable/drw_edittext" />
                                    </android.support.design.widget.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout> <!-- END ROW -->
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/til_musteriTel2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <android.support.design.widget.TextInputEditText
                                            android:id="@+id/ed_musteriTel2"
                                            android:hint="@string/str_musteriTel2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="phone"
                                            android:background="@drawable/drw_edittext" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout> <!-- END ROW -->
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/til_musteriTel3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <android.support.design.widget.TextInputEditText
                                            android:id="@+id/ed_musteriTel3"
                                            android:hint="@string/str_musteriTel3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="phone"
                                            android:background="@drawable/drw_edittext" />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout> <!-- END ROW -->
                        </LinearLayout> <!-- TELEFON ROW END -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_musteriAdres1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_musteriAdres1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/str_musteriAdres1"
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_musteriAdres2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_musteriAdres2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/str_musteriAdres2"

                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/spinner_musteriFirma"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:background="@drawable/drw_line_cerceve"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->


                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <RadioGroup
                                    android:id="@+id/grp_cinsiyet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/drw_line_cerceve"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:id="@+id/rdb_erkek"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Erkek"/>
                                    <RadioButton
                                        android:id="@+id/rdb_kadin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kadın"/>
                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_musteriBilgi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_musteriBilgi"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:hint="@string/str_musteriBilgi"
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_musteriEkle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_musteriEkleBtn"
                                android:padding="10dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/secondaryTextColor"
                                android:background="@color/design_default_color_primary"
                                />

                        </LinearLayout><!-- ROW END -->

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>



    </android.support.v7.widget.CardView>




    </LinearLayout>



</RelativeLayout>