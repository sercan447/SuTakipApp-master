<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SiparisEkleFragment">


    <LinearLayout
        android:id="@+id/linearlayout_siparisEkle"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardview_siparisEkle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="7dp"
            android:background="@color/primaryLightColor"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_siparisMusteriAdSoyad"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_siparisMusteriAdSoyad"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/str_siparisAlanKisi"
                                        android:background="@drawable/drw_edittext" />

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/spinner_siparisUrunTipi"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:background="@drawable/drw_line_cerceve"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:background="@drawable/drw_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/spinner_siparisUrunBoyutu"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:background="@drawable/drw_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/spinner_siparisArac"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_siparisMusteriBilgi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_siparisMusteriBilgi"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:hint="@string/str_siparisBilgi"
                                        android:background="@drawable/drw_edittext" />

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout> <!-- END ROW -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_siparisEkle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SipariÅŸ  Ekle"
                                android:padding="10dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/secondaryTextColor"
                                android:background="@color/design_default_color_primary"
                                />

                        </LinearLayout><!-- ROW END -->

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>



        </android.support.v7.widget.CardView>




    </LinearLayout>



</RelativeLayout>