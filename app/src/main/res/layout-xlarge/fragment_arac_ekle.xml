<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AracEkleFragment">


    <LinearLayout
        android:id="@+id/linearlayout_aracEkle"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardview_aracEkle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="7dp"
            android:background="@color/primaryLightColor"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="20dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_plaka_aracEkle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_plaka_aracEkle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Araç Plakası giriniz."
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout> <!--edıttext araç plaka END ROW -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_telefon_aracEkle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_telefon_aracEkle"
                                        android:hint="Araç Telefonu giriniz."
                                        android:layout_width="match_parent"
                                        android:inputType="phone"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>


                            </LinearLayout> <!-- END ROW -->
                        </LinearLayout> <!-- TELEFON ROW END -->

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp">
                                <Spinner
                                    android:background="@drawable/drw_line_cerceve"
                                    android:id="@+id/spinner_model_aracModelEkle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout> <!-- spinner END ROW -->
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp"
                                android:orientation="vertical">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/til_bilgi_aracEkle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/ed_bilgi_aracEkle"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:hint="Araç ile ilgili bilgi giriniz."
                                        android:background="@drawable/drw_edittext" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout> <!-- edittext NOT END ROW -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_aracEkle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Araç Ekle"
                                android:padding="10dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/secondaryTextColor"
                                android:background="@color/design_default_color_primary"
                                />

                        </LinearLayout><!--BUTTON ROW END -->

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>