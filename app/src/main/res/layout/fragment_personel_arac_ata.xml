<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AracEkleFragment">


    <LinearLayout
        android:id="@+id/linearlayout_personelAracEkle"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardview_aracEkle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="7dp"
            android:background="@color/primaryLightColor"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="20dp">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Spinner
                                    android:background="@drawable/drw_line_cerceve"
                                    android:id="@+id/spinner_personelAracAta_Personel"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout> <!-- firma telfon END ROW -->

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp"
                                android:orientation="vertical">
                                <Spinner
                                    android:id="@+id/spinner_personelAracAta_Arac"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/drw_line_cerceve"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout> <!-- edittext NOT END ROW -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_soforAta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Şoför Ata"
                                android:padding="10dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/secondaryTextColor"
                                android:background="@color/design_default_color_primary"
                                />

                        </LinearLayout><!--BUTTON ROW END -->

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>